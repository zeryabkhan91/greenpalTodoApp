<% if @todo.errors.any?  %>
<h1> Following errors prevented the todo from being saved </h1>
<ul>
	<% @todo.errors.full_messages.each do |msg|%>
<li><%= msg %></li>
	<% end%>
</ul>
<% end %>

<%= form_for @todo do |f| %>
<p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>
<%= f.submit %>
	<% end %>
	<%= link_to "Back to listing", todos_path%>